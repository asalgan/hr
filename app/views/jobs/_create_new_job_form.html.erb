	</div>
	<div>
		<%#= f.label :additional_question2, "Additional Question #2 (optional)" %>
		<%#= f.text_field :additional_question1, placeholder: "Any other questions you want to ask?" %>
	</div>
	<div>
		<%#= f.label :additional_question3, "Additional Question #3 (optional)" %>
		<%#= f.text_field :additional_question1, placeholder: "Any other questions you want to ask?" %>
	</div> -->
	<div>
		<%= f.hidden_field :company_id, :value => current_company.id %>
	</div>
	<div>
		<%= f.submit 'Create job opening', :class => 'job-submit' %>
	</div>
<% end %>