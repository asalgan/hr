<div class="company-page">
    <div class="container">
      <div class="content">
      <%= render 'shared/side_nav' %>
      <div class="main">
        <section class="positions-first col-md-12">
          <div class="openings">
            <h1 class="category-header">Openings</h1>
            <%= link_to ' + New Opening', new_company_job_path, :class => "new-opening-button" %>
            <h2 class="current-header">Current</h2>
              <div class="open-positions-list">
                <ul>
                  <% @current_positions.each do |x| %>
                  <li>
                    <h2 class="job-title">
                      <%= link_to company_job_url(:id => "#{x.id}") do %>
                      <%= x.title %>
                      <% end %>
                    </h2>
                    <p class="time-ago"><i>Created <%= time_ago_in_words(x.created_at) %> ago</i></p>
                    <p class="applications"><span class="application-count">0 applicants</span> have applied for this position</p>
                  </li>
                <% end %>
              </div>
          </div>
        </section>

      </div>
    </div>
  </div>
</div>
