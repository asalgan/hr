<div class="company-page">
	<div class="container">
		<div class="content">
			<%= render 'shared/side_nav' %>
			<div class="main">
				<p>
					<strong>Title:</strong>
				  <%= @job.title %>
				</p>

				<p>
				  <strong>Description:</strong>
				  <%= @job.description %>
				</p>

				<p>
				  <strong>Employment Type:</strong>
				  <%= @job.employment_type %>
				</p>

				<p>
				  <strong>Minimum Experience:</strong>
				  <%= @job.experience_level %>
				</p>

				<%= link_to 'Delete this job', company_job_path, :confirm => 'Are you sure you want to destroy this job?', :method => :delete %>

				<!-- <div class="summernote"></div> -->
			</div>
		</div>
	</div>
</div>
