<section class="billing">

  <div class="billing-form">
    <h1 class="category-header">Create an account</h1>
    <h3 class="cc-header col-md-4 col-md-offset-4">Credit card information</h3>
    <%= render 'payment_form' %>
  </div>

  <div class="pricing">
    <h3 class="pricing-header col-md-4 col-md-offset-4">Pricing information</h3>
