    <h1 class="price col-md-4 col-md-offset-4">$19 <span class="per-month"> / month </span></h1>
    <div class="questions col-md-12">
      <div class="part-a col-md-6"></div>
      <div class="part-b col-md-6"></div>
    </div>
  </div>

