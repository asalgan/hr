<%= form_for(@applicant) do |f| %>
	<div class="apply-form-title">
		<%= f.label :first_name, "First name *" %>
		<%= f.text_field :first_name, required: :true %>
	</div>
	<div>
		<%= f.label :last_name, "Last name *" %>
		<%= f.text_field :last_name, required: :true %>
	</div>
	<div>
		<%= f.label :phone_number, "Phone number *" %>
		<%= f.telephone_field :phone_number, required: :true %>
	</div>
	<div>
		<%= f.label :email_address, "Email address *" %>
		<%= f.email_field :email_address, required: :true %>
	</div>
	<div>
		<%= f.label :current_job_role, "Current role" %>
		<%= f.text_field :current_job_role, placeholder: "What is your current title?" %>
	</div>
	<div>
		<%= f.label :current_job_company, "Current company" %>
		<%= f.text_field :current_job_company, placeholder: "Company where you currently work" %>
	</div>
	<div>
		<%= f.label :current_job_city, "Current city" %>
		<%= f.text_field :current_job_city, placeholder: "Where is your current company located?" %>
	</div>
	<div>
		<%= f.label :resume %>
		<%= f.file_field :resume %>
	</div>	
	<div>
		<%= f.label :cover_letter %>
		<%= f.file_field :cover_letter %>
	</div>
	<%= hidden_field_tag "job_id", params[:job_id] %>
	<%= hidden_field_tag "company_id", params[:company_id] %>
	<div>
		<%= f.submit 'SUBMIT APPLICATION', :class => 'job-submit' %>
	</div>
<% end %>
